{
  "name": "sistema-ns",
  "version": "1.0.0",
  "description": "Sistema NS con Flask y Tailwind CSS",
  "scripts": {
    "dev": "npx tailwindcss -i ./front/static/css/styles.css -o ./front/static/css/output.css --watch",
    "build": "npx tailwindcss -i ./front/static/css/styles.css -o ./front/static/css/output.css --minify",
    "build:prod": "NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}